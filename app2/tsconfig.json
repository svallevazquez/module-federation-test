{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": "./",
		"paths": {
			"@atoms/*": ["./src/atoms/*"],
			"@components/*": ["./src/components/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@styles/*": ["./src/styles/*"],
			"@customTypes/*": ["./src/types/*"],
			"@stores/*": ["./src/stores/*"],
			"@apiSdk/*": ["./src/apiSdk/*"],
			"@pages/*": ["./src/pages/*"],
			"@graphql/*": ["./src/graphql/*"],
			"@formUtils/*": ["./src/form/*"],
			"@errorClasses/*": ["./src/ErrorClasses/*"],
			"@utils/*": ["./src/utils/*"],
			"@mocks/*": ["./src/__mocks__/*"],
			"@context/*": ["./src/context/*"],
			"@constants/*": ["./src/constants/*"],
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
	],
	"exclude": ["node_modules"]
}
